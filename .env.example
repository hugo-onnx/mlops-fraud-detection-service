# Postgres Configuration
POSTGRES_USER=mlflow_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mlflow_db

# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_PORT=9000
MINIO_BUCKET=mlflow-artifacts

# AWS/S3 Credentials (Used by MLflow to talk to MinIO)
AWS_ACCESS_KEY_ID=${MINIO_ROOT_USER}
AWS_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}
AWS_DEFAULT_REGION=us-east-1

# MLflow Version and Port
MLFLOW_VERSION=latest
MLFLOW_PORT=5000

# MLflow Internal URIs (Container-to-Container)
# Used by the MLflow server container to reach DB and Storage
MLFLOW_BACKEND_STORE_URI=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://${MINIO_BUCKET}/
MLFLOW_S3_ENDPOINT_URL=http://minio:${MINIO_PORT}

# MLflow External URIs (Host-to-Container)
# Used by local Python scripts/notebooks to log data to the containers
LOCAL_MLFLOW_TRACKING_URI=http://localhost:${MLFLOW_PORT}
LOCAL_MLFLOW_S3_ENDPOINT_URL=http://localhost:${MINIO_PORT}